{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./",
        "outDir": "dist/tmp",
        "noEmitOnError": true,
        "sourceMap": true,
        "module": "amd",
        "target": "es5",
        "types": [ "mendix-client", "jasmine" ],
        "moduleResolution": "node",
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "watch": true,
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules/",
        "MxTestProject/",
        "test/",
        "dist/"
    ]
}